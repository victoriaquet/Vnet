@model SNC2017.Models.TarjetaPago

@{
    ViewBag.Title = "Editar tarjeta pago";
}
<style>.control-label{margin-top: 0px!important}</style>

<div class="card">
    <div class="card-header" data-background-color="green" style="display: flex">
        <h4 class="title">Editar tarjeta</h4>
        <span class="category" style="margin-top: 4px;margin-left:10px">@ViewBag.apellidosuscriptor, @ViewBag.nombresuscriptor</span>
    </div>


    <div class="card-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdTarjetaPago)
            <input class="hidden" name="IdSuscriptor" value="@ViewBag.idsuscriptor"/>

            <div id="example-tabs">
                <h3>Datos Tarjeta</h3>
                <section style="overflow-y: scroll" class="col-lg-12">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-lg-6">
                        <div class="form-group is-empty" style="margin-top: 0px">
                            @Html.LabelFor(model => model.TipoTarjeta, htmlAttributes: new { @class = "control-label" })

                            @Html.EnumDropDownListFor(model => model.TipoTarjeta, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TipoTarjeta, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group is-empty"style="margin-top: 0px">
                            @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group is-empty"style="margin-top: 0px">
                            @Html.LabelFor(model => model.NombreExacto, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.NombreExacto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NombreExacto, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group is-empty"style="margin-top: 0px">
                            @Html.LabelFor(model => model.CodigoSeguridad, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.CodigoSeguridad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CodigoSeguridad, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group is-empty" style="margin-top: 0px">
                            @Html.LabelFor(model => model.TipoPeriodoEfectivo, htmlAttributes: new { @class = "control-label" })

                            @Html.EnumDropDownListFor(model => model.TipoPeriodoEfectivo, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TipoPeriodoEfectivo, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group is-empty" style="margin-top: 0px">
                            @Html.LabelFor(model => model.FechaDesde, htmlAttributes: new { @class = "control-label" })
                            <input class="form-control" type="date" required name="FechaDesde" value="@Model.FechaDesde.ToString("yyyy-MM-dd")" />
                            @Html.ValidationMessageFor(model => model.FechaDesde, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group is-empty" style="margin-top: 0px">
                            @Html.LabelFor(model => model.FechaHasta, htmlAttributes: new { @class = "control-label" })
                            <input class="form-control" type="date" required name="FechaHasta" value="@Model.FechaHasta.Value.ToString("yyyy-MM-dd")" />
                            @Html.ValidationMessageFor(model => model.FechaHasta, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group is-empty"style="margin-top: 0px">
                            @Html.LabelFor(model => model.MesVencimiento, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.MesVencimiento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MesVencimiento, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group is-empty"style="margin-top: 0px">
                            @Html.LabelFor(model => model.AñoVencimiento, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.AñoVencimiento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AñoVencimiento, "", new { @class = "text-danger" })

                        </div>

                    </div>







                </section>

            </div>



            <div class="navbar-xs navbar-inverse navbar-fixed-bottom" style="background: none; border: none; padding-bottom: 0px;padding-left: 260px">

                <div style="width: 100%;display: inline-flex">
                    <div style="width: 30%">
                        <div class="container text-left" style="height: 40px">

                            @Html.ActionLink("Volver", "Details", "Suscriptores", new { id = ViewBag.idsuscriptor }, new { @class = "btn btn-sm btn-default" })

                        </div>
                    </div>
                    <div style="width: 40%"><input type="submit" value="Guardar" class="btn btn-success" />    </div>
                    <div style="width: 30%"></div>

                </div>






            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
