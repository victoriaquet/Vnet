@model IEnumerable<SNC2017.Models.AreaCaso>

<div class="card">
    <div class="card-header" data-background-color="green" style="display: flex">
        <h4 class="title">Áreas casos</h4>
        <a href=@Url.Action("Create","AreaCasos") class="btn btn-success btn-sm sombrabtncreate btnadd">
            <span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>

    <div class="card-content">
        <div id="example-tabs">
            <h3>Todas</h3>
            <section>
                <table class="datatablebase table table-condensed table-hover" id="table" style="width: 100%">
                    <thead class="text-primary">
                        <tr class="text-center">
                            <th class="text-left" style="font-weight: bold">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th class="text-center" >Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="showhim">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>

                                <td class="text-center " style="font-size: large">

                                    <div class="showme">
                                        @*<a href="@Url.Action("Details", "AreaCasos", new {id = item.IdAreaCaso})" data-placement="left" data-toggle="tooltip" title="Detalles"><span class="glyphicon glyphicon-align-justify"></span></a>*@&nbsp;

                                        <a href="@Url.Action("Edit", "AreaCasos", new {id = item.IdAreaCaso})" title="Editar" data-placement="left" data-toggle="tooltip" ><span class="glyphicon glyphicon-edit"></span></a>&nbsp;
                                      @*  <a href="@Url.Action("Delete", "AreaCasos", new {id = item.IdAreaCaso})" title="Eliminar" data-placement="left" data-toggle="tooltip" ><span class="glyphicon glyphicon-trash"></span></a>&nbsp;*@
                                    </div>



                                </td>
                            </tr>
                        }
                    </tbody>
                </table>




            </section>

        </div>






    </div>
</div>


